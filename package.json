{
  "name": "etm-starting",
  "version": "1.0.0",
  "description": "entanmo starting",
  "homepage": ".",
  "main": "app.js",
  "dependencies": {
    "axios": "^0.19.0",
    "commander": "^2.20.0",
    "etm-js-lib": "git+https://github.com/entanmo/etm-js-lib.git",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa2-cors": "^2.0.6",
    "shelljs": "^0.8.3",
    "systeminformation": "^4.14.3",
    "unzipper": "^0.10.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.43.0"
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-w": "npx electron-builder -w",
    "build-m": "npx electron-builder -m",
    "build-l": "npx electron-builder -l"
  },
  "author": "Sy",
  "license": "ISC",
  "build": {
    "asar": true,
    "productName": "EnTanMo",
    "appId": "com.entanmo.etm",
    "copyright": "EnTanMo",
    "electronVersion": "5.0.2",
    "electronDownload": {
      "version": "5.0.2"
    },
    "mac": {
      "icon": "build/icons/logo.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "icon": "build/icons/logo.ico",
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator",
      "files": [
        "**/*",
        "!.vscode",
        "!client",
        "!assets",
        "assets/etm_win.zip",
        "assets/node_win.zip",
        "assets/pm2.zip"
      ]
    },
    "linux": {
      "icon": "build/icons/logos",
      "target": "AppImage",
      "files": [
        "**/*",
        "!.vscode",
        "!client",
        "!assets",
        "assets/etm_linux.zip",
        "assets/node_linux.zip",
        "assets/pm2.zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}